''' <summary>
''' 文字列ユーティリティクラス
''' </summary>
''' <remarks></remarks>
Public Class ClsStringUtil
    Private Sub New()
    End Sub

    ''' <summary>
    ''' Nullか空文字列ならTrueを返す
    ''' </summary>
    ''' <param name="value"></param>
    ''' <returns></returns>
    ''' <remarks></remarks>
    Public Shared Function IsNullOrEmpty(ByVal value As String) As Boolean
        If value Is Nothing Then
            Return True
        End If
        If value = "" Then
            Return True
        End If
    End Function
End Class
