                'パラメータ配列設定
                Master.strclicom = .gStrArrToString()

            End With

            'ヒストリデータの処理
            Call gSubHistry()

            ClsEventLog.gSubEVLog(mLoginInfo.userName, mstrPGID, "初期表示 成功", EventLogEntryType.Information, ClsEventLog.peLogLevel.Level2)
        Else
            'Master.strclicom = ""
        End If
    End Sub

